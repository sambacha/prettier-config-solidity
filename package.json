{
  "name": "prettier-config-solidity",
  "version": "1.2.2",
  "description": "conformant configuration for linting solidity files with prettier, based on offical solidity documentation",
  "prettier": "prettier-solidity-config",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx jest",
    "test:jest": "npx jest -u",
    "codecov": "npx codecov",
    "lint": "npx eslint . --fix",
    "fmt:sol": "npx prettier --config src/index.js --write tests/*.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sambacha/prettier-solidity-config.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "prettier",
    "lint",
    "defi",
    "cryptocurrency",
    "shrable",
    "config"
  ],
  "author": "sam bacha <sam@freighttrust.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sambacha/prettier-solidity-config/issues"
  },
  "homepage": "https://github.com/sambacha/prettier-solidity-config#readme",
  "devDependencies": {
    "codecov": "3.8.1",
    "eslint": "7.21.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "jest-mock-now": "1.3.0",
    "jest-snapshot-generate": "1.0.0",
    "jest-watch-typeahead": "0.6.1",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.6",
    "semantic-release": "17.4.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "prettier": "^2.1.1"
  }
}
